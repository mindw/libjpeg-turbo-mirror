#!/bin/sh

set -u
set -e

if [ $# -lt 1 ]; then
	echo USAGE: $0 \<SourceForge user name\> [repository path \(default = trunk\)]
	exit -1
fi

if [ $# -lt 2 ]; then
	TAG=trunk
else
	TAG=$2
fi

PROJWEB=/home/project-web/libjpeg-turbo/htdocs/
SSHSERVER=$1,libjpeg-turbo@shell.sourceforge.net

echo Synchronizing documentation from repository to project web ...
ssh $SSHSERVER create
ssh $SSHSERVER "cd $PROJWEB && svn co svn://svn.code.sf.net/p/libjpeg-turbo/code/$TAG/doc/html ljtdoc.$TAG/turbojpeg-c && svn co svn://svn.code.sf.net/p/libjpeg-turbo/code/$TAG/java/doc ljtdoc.$TAG/turbojpeg-java"

exit 0
